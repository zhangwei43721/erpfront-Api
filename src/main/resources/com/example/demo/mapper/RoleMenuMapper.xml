<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.RoleMenuMapper">

    <resultMap id="BaseResultMap" type="com.example.demo.pojo.RoleMenu">
        <id property="id" column="id"/>
        <result property="rid" column="rid"/>
        <result property="mid" column="mid"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,rid,mid
    </sql>

    <!-- 根据角色ID获取菜单ID列表 -->
    <select id="getMenusByRoleId" resultType="java.lang.Integer">
        SELECT mid
        FROM t_role_menu
        WHERE rid = #{roleId}
    </select>

    <!-- 删除角色所有权限 -->
    <delete id="deleteByRoleId">
        DELETE
        FROM t_role_menu
        WHERE rid = #{roleId}
    </delete>

    <!-- 批量插入角色菜单权限 -->
    <insert id="batchInsert">
        INSERT INTO t_role_menu(rid, mid) VALUES
        <foreach collection="menuIds" item="mid" separator=",">
            (#{roleId}, #{mid})
        </foreach>
    </insert>
</mapper>